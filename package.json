{
    "name": "minimotion",
    "version": "0.0.0-SNAPSHOT",
    "description": "Composable JavaScript animations with async timelines",
    "keywords": [
        "animation",
        "javascript",
        "typescript",
        "css",
        "dom",
        "svg",
        "canvas",
        "timeline"
    ],
    "repository": {
        "type": "git"
    },
    "author": "Bertrand Laporte",
    "main": "dist/lib/index.js",
    "scripts": {
        "clean": "rm -rf dist/",
        "build-test": "rollup -c rollup.test.config.js",
        "build": "tsc -p tsconfig.build.json",
        "demo": "rollup -c rollup.demo.config.js",
        "lint": "eslint 'src/**/*.{js,ts,svelte}'",
        "mocha": "mocha dist/test.js --reporter dot",
        "test": "yarn run build-test && yarn run mocha"
    },
    "license": "Apache-2.0",
    "bugs": {},
    "devDependencies": {
        "@types/mocha": "5.2.7",
        "@types/node": "12.6.3",
        "@typescript-eslint/eslint-plugin": "1.12.0",
        "@typescript-eslint/parser": "1.12.0",
        "eslint": "6.0.1",
        "eslint-config-prettier": "6.0.0",
        "eslint-plugin-svelte3": "2.7.2",
        "http-server": "^0.11.1",
        "mocha": "6.1.4",
        "rollup": "1.17.0",
        "rollup-plugin-copy": "3.0.0",
        "rollup-plugin-gzip": "2.2.0",
        "rollup-plugin-node-resolve": "5.2.0",
        "rollup-plugin-svelte": "5.1.0",
        "rollup-plugin-terser": "5.1.1",
        "rollup-plugin-typescript2": "0.22.0",
        "svelte": "3.6.7",
        "typescript": "3.5.3"
    },
    "engines": {
        "node": ">=10.3.5"
    }
}
